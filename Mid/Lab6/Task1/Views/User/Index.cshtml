@{
    ViewBag.Title = "User List Page";
}

<div class="container">
    <div class="row">
        <h2>User List</h2>
    </div>
    <div class="row">
        <table class="table table-striped">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Type</th>
                <th>Salary</th>
                <th>Action</th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Type</td>
                    <td>@user.Salary</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "User", new { Id = user.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", "User", new { Id = user.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>